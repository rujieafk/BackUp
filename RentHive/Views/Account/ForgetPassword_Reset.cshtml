@{
    ViewData["Title"] = "Reset Password";
}
<div class="CenterLogo">
    <img src="~/image/logo_name.png" class="logo" />
</div>
<div class="ForgetPassword-border">
    <div class="message">
        <h6 style="color: green">Please create a new password</h6>
    </div>
    <div>
        <div class="CenterTextbox">
            <input class="InputTextbox" type="password" placeholder="Password" />
        </div>
        <div class="CenterTextbox">
            <input class="InputTextbox" type="password" placeholder="Confirm Password" />
        </div>
        <div>
            <a class="myButton" asp-controller="Account" asp-action="Login">Change Password</a>
        </div>
    </div>
</div>
