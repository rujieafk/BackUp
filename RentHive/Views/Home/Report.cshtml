    ViewData["Title"] = "Report";
}
<div>
    <div class="side-nav">
        <div class="user">
            <a href="@Url.Action("Profile", "System")">
                <img src="~/image/user.png" class="user-img" />
            </a>
            <div class="text-name">
                <h2>John Doe</h2>
                <p>user@gmail.com</p>
            </div>
        </div>
        <ul class="menu-list">
            <li class="menu-item"><img class="menu-icon" src="~/image/dashboard.png" /><a asp-controller="Home" asp-action="Index" class="menu-text">Dashboard</a></li>
            <li class="menu-item-active"><img class="menu-icon" src="~/image/file.png" /><a asp-controller="Home" asp-action="Report" class="menu-text">Reports</a></li>
